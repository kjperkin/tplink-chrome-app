{
  "name": "TP-Link Control",
  "version": "1.0",
  "description": "Control TP-Link Smart Home Devices",
  "permissions": [
    "<all_urls>"
  ],
  "sockets": {
    "tcp": {
      "connect": "*:9999"
    }
  },
  "app": {
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
  },
  "manifest_version": 2
}
